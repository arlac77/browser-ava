{
  "name": "browser-ava",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "Run ava tests in the browser",
  "keywords": [
    "ava",
    "runner",
    "test",
    "testing"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "browser-ava": "src/browser-ava-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "es-module-lexer": "^1.2.1",
    "globby": "^13.1.3",
    "koa": "^2.14.1",
    "koa-static": "^5.0.0",
    "playwright": "^1.32.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "execa": "^7.1.1",
    "semantic-release": "^21.0.1"
  },
  "engines": {
    "node": ">=16.20.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/browser-ava"
  },
  "bugs": {
    "url": "https://github.com/arlac77/browser-ava/issues"
  },
  "homepage": "https://github.com/arlac77/browser-ava#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-node-app"
    ]
  }
}
